{
  "compilerOptions": {

    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "incremental": true,
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "cypress",
      "@testing-library/cypress"
    ],
    "noErrorTruncation": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
        "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
    "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "jsx": "preserve"
    }
  },
      "include": [
      "**/*.ts",
      "**/*.tsx",
    ],
    "exclude": [
      "node_modules"
    ]

}
